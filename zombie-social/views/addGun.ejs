<% include _header %>

<h1>Registro de armas</h1>

<form action="/addGun" method="post">
    <div class="form-group">
        <input name="descripcion" type="text" class="form-control"
        placeholder="Descripcion" required autofocus/>
    </div>
    <div class="form-group">
        <input name="categoria" type="text" class="form-control"
        placeholder="Categoria" required/>
    </div>
    <div class="form-group">
        <input name="fuerza" type="int" class="form-control"
        placeholder="Fuerza">
    </div>
    <label>
        <input name="municiones" type="checkbox"> Usa municiones?
    </label>
    <input type="submit" value="Registrarse" class="btn btn-primary btn-block"/>
</form>

<% include _footer %>